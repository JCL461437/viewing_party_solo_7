<%= button_to "Discover Top Rated Movies", user_movies_index_path(@user), method: :get, params: {} %>

<%= form_with model: @user, url: user_movies_index_path(@user), method: :get, data: {turbo: false}, local: true do |f| %>
  <%= f.label :search_by_movie_title %>
  <%= f.text_field :search_by_movie_title, class: "form-control" %><br>

  <%= f.submit 'Search by Movie Title', class: "btn btn-primary" %>
<% end %>